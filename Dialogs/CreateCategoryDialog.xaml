<Window x:Class="Labb_3.Dialogs.CreateCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb_3.Dialogs"
        mc:Ignorable="d"
        Title="Add Category" Height="225" Width="230" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Dialogs/letter-q.ico">
    <Grid>

        <Label   Content="Category Name:"
                     FontWeight="Bold" Margin="15,36,15,127"/>
        <TextBox x:Name="CategoryNameTextBox" Margin="15,59,15,110"/>

        <Button Content="Cancel" 
                Margin="30,144,120,20"
                Click="CancelButton_Click"/>

        <Button Content="Create" 
                Margin="120,144,30,20"
                Click="CreateButton_Click"/>

    </Grid>
</Window>
